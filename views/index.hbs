<div class="container">
    <h1>Welcome {{user.firstName}} {{user.lastName}}!</h1>
    Select video to upload:
    <form method="post" action="/image-upload" enctype="multipart/form-data">
      <input key = "video" type="file" name="fileToUpload" accept="video/*">
      <input key = "caption" type = "text" name="caption" placeholder="caption">
      <input key = "hashtag" type = "text" name="hashtag" placeholder="hashtag">
      <input type="submit" value="Upload Video" name="submit">
      </form>

{{!-- accept="file_extension|audio/*|video/*|image/*|media_type" --}}
  <div id="messages">
    <h2>Messages</h2>

    {{#unless messages}}
      <p>Sorry, no messages. :(</p>
    {{else}}
      <ol class="message-list">
        {{#each messages}}
          <li>
            <div class="message-body">
              <video height= "300" width= "300" controls>
              <source src={{imageLink}} type="video/mp4">
              </video>
            </div>
            <div class= "message-caption">
              <p>{{caption}}</p>
            </div>
            {{#each hashtag}}
            <div class= "message-hashtag">
              <a href= "/hashtags/{{hashtag}}"> #{{hashtag}} </a>
            </div>
            {{/each}}
            <div class="message-timestamp">
              Posted on {{createdAt}}
            </div>
          </li>
        {{/each}}
      </ol>
    {{/unless}}
  </div>
</div>

